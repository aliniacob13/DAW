@model ArticlesApp.Models.ProductDetailsViewModel

@{
    ViewData["Title"] = "Detalii produs";
}

<h2>@Model.Product.Title</h2>

<div class="row">
    <div class="col-md-4">
        @* Imagine produs *@
        @if (!string.IsNullOrEmpty(Model.Product.ImagePath))
        {
            <img src="@Url.Content("~/images/products/" + Model.Product.ImagePath)"
                 alt="@Model.Product.Title"
                 class="img-fluid rounded mb-3" />
        }
        else
        {
            <img src="@Url.Content("~/images/products/default.jpg")"
                 alt="Imagine implicita"
                 class="img-fluid rounded mb-3" />
        }
    </div>

    <div class="col-md-8">
        <p><strong>Pret:</strong> @Model.Product.Price</p>
        <p><strong>Stoc:</strong> @Model.Product.Stock</p>
        <p><strong>Categorie:</strong> @Model.Product.Category?.CategoryName</p>
        <p><strong>Rating mediu:</strong>
            @{
                var rating = Model.Product.AverageRating;
            }
            @(rating > 0 ? rating.ToString("0.0") : "-")
        </p>
        <p><strong>Descriere:</strong></p>
        <p>@Model.Product.Description</p>
    </div>
</div>

<hr />

<h3>Review uri existente</h3>

@if (Model.Reviews.Any())
{
    <ul class="list-group">
        @foreach (var r in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>@(r.User?.UserName ?? "Anonim")</strong>
                @if (r.Rating.HasValue)
                {
                    <span>(rating @r.Rating.Value)</span>
                }
                <br />
                @r.Content
            </li>
        }
    </ul>
}
else
{
    <p>Nu exista review uri pentru acest produs.</p>
}

<hr />

<h3>Lasa un review</h3>

<form asp-action="AddReview" method="post">
    <input type="hidden" name="productId" value="@Model.Product.Id" />

    <div class="mb-3">
        <label class="form-label">Rating (1 5, optional)</label>
        <select name="rating" class="form-select">
            <option value="">Fara rating</option>
            @for (var r = 1; r <= 5; r++)
            {
                <option value="@r">@r</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Comentariu (optional)</label>
        <textarea name="content" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Trimite review</button>
</form>

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Inapoi la lista</a>
</p>