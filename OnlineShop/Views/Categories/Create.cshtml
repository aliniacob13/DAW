@model OnlineShop.Models.Category

@{
    ViewData["Title"] = "Adaugă Categorie";
}

<div class="container mt-4">
    <h2>Adaugă Categorie Nouă</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="New" method="post">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Nume Categorie</label>
                    <input asp-for="Name" class="form-control" placeholder="Introdu nume..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salveaza" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Înapoi la listă</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}