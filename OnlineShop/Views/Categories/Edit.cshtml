@model OnlineShop.Models.Category

<h2>Editează Categoria</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Nume Categorie</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <br />
    <div class="form-group">
        <input type="submit" value="Salvează Modificările" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Înapoi la listă</a>
    </div>
</form>