@model OnlineShop.Models.Review
<div class="container mt-4">
    <h2>Editeaza review</h2>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @* ca să nu pierdem legătura cu produsul *@
                <input type="hidden" asp-for="ProductId" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label">Rating (1 - 5)</label>
                    <select asp-for="Rating" class="form-select">
                        <option value="">Fara rating</option>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Comentariu</label>
                    <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Salveaza</button>
                <a class="btn btn-secondary"
                   asp-controller="Products"
                   asp-action="Show"
                   asp-route-id="@Model.ProductId">
                    Inapoi la produs
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}