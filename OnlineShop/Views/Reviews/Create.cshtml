@model OnlineShop.Models.Review

@{
    ViewData["Title"] = "Adaugă Review";
}

<div class="container mt-4">
    <h2>Adaugă Review Nou</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">

                @* Mesajele de la IValidatableObject + alte erori de model *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @* ProductId vine din controller si il trimitem inapoi hidden *@
                <input asp-for="ProductId" type="hidden" />

                @* Optional: afiseaza numele produsului daca l ai pus in ViewBag.ProductName *@
                @if (ViewBag.ProductName != null)
                {
                    <div class="mb-3">
                        <label class="form-label">Produs</label>
                        <input type="text"
                               class="form-control"
                               value="@ViewBag.ProductName"
                               disabled />
                    </div>
                }

                <div class="form-group mb-3">
                    <label asp-for="Comment" class="control-label">Conținut Review</label>
                    <textarea asp-for="Comment"
                              class="form-control"
                              rows="3"
                              placeholder="Scrie aici părerea ta despre produs..."></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label">Rating</label>
                    <input asp-for="Rating"
                           class="form-control"
                           type="number"
                           min="1"
                           max="5"
                           placeholder="Alege un rating între 1 și 5 (sau lasă gol)" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                @* Nu lasam userul sa umble la data, o trimitem hidden *@
                <input asp-for="DatePosted" type="hidden" />

                <div class="form-group">
                    <input type="submit" value="Salvează" class="btn btn-primary" />

                    <a asp-controller="Products"
                       asp-action="Show"
                       asp-route-id="@Model.ProductId"
                       class="btn btn-secondary">
                        Înapoi la produs
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}